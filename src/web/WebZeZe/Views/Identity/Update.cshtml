@model UserUpdateRequest
@using BuildBlockServices.Enum;

@{
    ViewData["Title"] = "Atualizar";
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-12">
        <section>
            <form method="post">
                <h4>Atualizando informações de @Model.Name</h4>
                <hr />

                @Html.ValidationSummary()

                <div class="form-group">
                    <label asp-for="Name">Nome</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CPF">CPF</label>
                    <input asp-for="CPF" class="form-control" />
                    <span asp-validation-for="CPF" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <label asp-for="Email">Email</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
              
                <div class="form-group">
                    <label asp-for="TypeAddress">Tipo de endereço</label>
                    <select class="form-control" asp-for="TypeAddress" asp-items="Html.GetEnumSelectList<TypeAddress>()"></select>
                </div>

                <div class="form-group">
                    <label>Logradouro</label>
                    <input asp-for="PublicPlace" class="form-control" />
                    <span asp-validation-for="PublicPlace" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <label>Número</label>
                    <input asp-for="Number" class="form-control" />
                    <span asp-validation-for="Number" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>Complemento</label>
                    <input asp-for="Complement" class="form-control" />
                    <span asp-validation-for="Complement" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ZipCode">Cep</label>
                    <input asp-for="ZipCode" class="form-control" />
                    <span asp-validation-for="ZipCode" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="City">Cidade</label>
                    <input asp-for="City" class="form-control" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="District">Bairro</label>
                    <input asp-for="District" class="form-control" />
                    <span asp-validation-for="District" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="State">Estado</label>
                    <input asp-for="State" class="form-control" />
                    <span asp-validation-for="State" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button id="btnsubmit"  type="submit" class="btn btn-primary">Enviar</button>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
