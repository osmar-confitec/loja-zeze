@inject IUser AppUser

<ul class="navbar-nav">
    @if (AppUser.IsAuthenticated())
    {
        <li class="nav-item">
            <a class="nav-link text-dark" title="Manage">Olá @AppUser.GetUserEmail()</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Identity" asp-action="Logout">Sair</a>
        </li>
        @if (AppUser.IsAdmin())
        {
            <li class="nav-item" style="padding-right: 30px;">
                <a class="btn btn-success" asp-controller="Identity" asp-action="Register">Criar usuário</a>
            </li>
            <li class="nav-item" style="padding-right: 30px;">
                <a class="btn btn-success" asp-controller="Identity" asp-action="GetCustomer">Listar usuários</a>
            </li>
        }

    }
    else
    {
        <li class="nav-item">
            <a class="btn btn-primary" asp-controller="Identity" asp-action="Login">Login</a>
        </li>
    }
</ul>
